<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <data>
        <variable
            android:name="jmm"
            android:type="dodochazoenterprise.journeydiaries.view.JourneyManageFragment"
            />
        <variable
            android:name="jvm"
            android:type="dodochazoenterprise.journeydiaries.viewModel.JourneyViewModel"
            />
    </data>
    <Button
        android:text="Cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="35dp"
        android:id="@+id/buttonCancel"
        android:layout_toStartOf="@+id/buttonUpdate" />

    <Button
        android:text="Create Travel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="50dp"
        android:id="@+id/buttonUpdate"
        android:layout_alignBaseline="@+id/buttonCancel"
        android:layout_alignBottom="@+id/buttonCancel"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Name :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/buttonCancel"
        android:layout_marginTop="164dp"
        android:id="@+id/textName" />

    <TextView
        android:text="Departure date :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textName"
        android:layout_alignStart="@+id/textName"
        android:layout_marginTop="24dp"
        android:id="@+id/textFrom" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/textFrom"
        android:id="@+id/textTo"
        android:text="Return date :" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@{jvm.name}"
        android:ems="10"
        android:layout_alignBottom="@+id/textFrom"
        android:layout_toEndOf="@+id/textName"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="25dp"
        android:id="@+id/editName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_toEndOf="@+id/textFrom"
        android:id="@+id/editFrom"
        android:layout_above="@+id/textTo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textTo"
        android:id="@+id/editTo" />

</RelativeLayout>