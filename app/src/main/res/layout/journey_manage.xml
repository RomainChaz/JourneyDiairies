<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="jvm"
            type="dodochazoenterprise.journeydiaries.viewModel.JourneyViewModel"
            />
    </data>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center_horizontal">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Name :"
                android:gravity="right|center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textName"/>

            <EditText
                android:text="@{jvm.name}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/editName"
                android:inputType="text"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:text="Departure date :"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/textFrom"
                android:gravity="right|center" />

            <EditText
                android:text="@{jvm.from}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/editFrom"
                android:gravity="center_vertical|center"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/textTo"
                android:text="Return date :"
                android:gravity="right|center" />

            <EditText
                android:text="@{jvm.to}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/editTo"
                android:inputType="text"
                android:textAlignment="center" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:layout_margin="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/coordonnes"
                android:text="CoordonnÃ©es :"
                android:gravity="center"
                android:textAlignment="center" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:text="Latitude :"
                android:gravity="right|center"
                android:id="@+id/latitudeText" />

            <EditText
                android:text="@{jvm.latitude}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/latitude"
                android:inputType="text"
                android:textAlignment="center"
                android:enabled="false" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:id="@+id/longitudeText"
                android:text="Longitude:"
                android:gravity="right|center"/>

            <EditText
                android:text="@{jvm.longitude}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/longitude"
                android:inputType="text"
                android:textAlignment="center"
                android:enabled="false" />
        </TableRow>



        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <Button
                android:text="@{jvm.stateReturn}"
                android:onClick="@{() -> jvm.onDeleteClick()}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonCancel"
                android:elevation="0dp" />

            <Button
                android:text="@{jvm.state}"
                android:onClick="@{() -> jvm.save(jvm.id, editName.getText().toString(), editFrom.getText().toString(), editTo.getText().toString(), latitude.getText().toString(), longitude.getText().toString())}"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/buttonUpdate"/>
        </TableRow>
    </TableLayout>
</layout>